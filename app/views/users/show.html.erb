<% content_for(:title, 'Profile | StackOverflow') %>
<h1>Profile</h1>

<h2><%= @user.name %></div>

<h3>Questions</h3>
<% @user.questions.each do |question| %>
  <h4><a href="users/<%= question.user_id %>/questions/<%= question.id %>"><%= question.title %></a><h4>
<% end %>
<br />

<%= link_to "Delete account", user_path(@user),
          data: { confirm: "Are you sure you want to delete this account",
          method: 'delete' }
          %>
